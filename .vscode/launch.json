{
    "configurations": [
        {
            "name": "Test All Features",
            "type": "node",
            "program": "devcontainer",
            "args": [
                "features",
                "test",
                "--skip-autogenerated"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": false,
            "request": "launch",
        },
        {
            "name": "Test Features (input)",
            "type": "node",
            "program": "devcontainer",
            "args": [
                 "features",
                "test",
                "--skip-autogenerated",
                "--features",
                "${input:selectedFeatures}",
                "--base-image",
                "${input:selectedBaseImage}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": false,
            "request": "launch",
        }
    ],
    "inputs": [
        {
            "id": "selectedFeatures",
            "type": "promptString",
            "description": "Comma separated list of features to test",
        },
        {
            "id": "selectedBaseImage",
            "type": "promptString",
            "description": "Base Image",
            "default": "mcr.microsoft.com/vscode/devcontainers/base:noble"
        }
    ]
}